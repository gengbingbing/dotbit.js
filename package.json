{
  "name": "dotbit-sdk-allin",
  "version": "0.4.19",
  "description": "A complete .bit SDK and utilities in TypeScript",
  "author": "tengyu",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib.esm/index.js",
  "types": "src/index.ts",
  "publishConfig": {
    "types": "lib/index.d.ts"
  },
  "scripts": {
    "test": "jest",
    "clear": "rm -rf ./lib/ ./lib.esm/",
    "build": "npm run build:esm && npm run build:commonjs",
    "build:commonjs": "tsc -p tsconfig.build.json",
    "build:esm": "tsc -p tsconfig.build.esm.json",
    "dev:browser": "npm run build && vite ./example/browser",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npx only-allow npm && npm run build",
    "slip44": "npm i bip44-constants@latest -D && node scripts/slip44-json.js",
    "character": "node scripts/get_character_list.js"
  },
  "keywords": [
    "dotbit",
    ".bit",
    "DID",
    "Decentralized Identity",
    "web3",
    "blockchain",
    "nervos",
    "ckb"
  ],
  "files": [
    "src",
    "lib",
    "lib.esm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dotbitHQ/dotbit.js.git"
  },
  "bugs": {
    "url": "https://github.com/dotbitHQ/dotbit.js/issues"
  },
  "devDependencies": {
    "@ensdomains/ensjs": "^2.1.0",
    "@linkdesu/moleculejs": "^1.1.1",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "bip44-constants": "latest",
    "eslint": "8.22.0",
    "eslint-config-blockabc": "^0.15.2",
    "eslint-plugin-n": "^15.3.0",
    "jest": "^28.1.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "vite": "^2.9.14"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.7.2",
    "@metamask/eth-sig-util": "^5.0.2",
    "blake2b": "^2.1.4",
    "cross-fetch": "^3.1.5",
    "ethers": "^5.6.9",
    "grapheme-splitter": "^1.0.4",
    "jest-environment-jsdom": "^29.3.1",
    "tronweb": "^5.1.0",
    "type-fest": "^2.16.0"
  }
}
